{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:default",
    "network:allow-all",
    "tcp:allow-connect",
    "tcp:allow-send",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "bash",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        "/tmp/**",
        "$APPCONFIG",
        "$APPCONFIG/**",
        "/sys/class/net",
        "/sys/class/net/**",
        "/sys/class/net/**/wireless",
        "/sys/class/net/**/wireless/**",
        "/etc/wpa_supplicant/**"
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        "/tmp/**",
        "$APPCONFIG",
        "$APPCONFIG/**",
        "/sys/class/net",
        "/sys/class/net/**"
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        "/tmp/**",
        "$APPCONFIG",
        "$APPCONFIG/**"
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        "/tmp/**",
        "$APPCONFIG/**"
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        "/tmp/**",
        "$APPCONFIG/**",
        "/sys/class/net",
        "/sys/class/net/**",
        "/etc/wpa_supplicant/**"
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        "/tmp/**",
        "$APPCONFIG/**",
        "/etc/wpa_supplicant/**"
      ]
    }
  ]
}